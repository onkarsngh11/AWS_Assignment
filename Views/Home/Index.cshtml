@model ProductsModel

@{
    ViewData["Title"] = "Index";
}

<form action="Home/Search">
    <input type="text" placeholder="Search.." name="search" style="width:88%">
    <button type="submit"><i class="fa fa-search"></i>Search</button>
</form>
<p>
    <a asp-action="AddProducts">Add Products</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListOfAllProducts)
        {
            <tr>
                @Html.HiddenFor(modelItem => item.Id)
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @Html.HiddenFor(modelItem => item.Price)
                <td>
                    @Html.DisplayFor(modelItem => item.SalePrice)
                </td>
                <td>
                    <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" title="@item.ImageUrl" width="80" height="80" />
                </td>
                <td>
                    @Html.ActionLink("Add to Cart", "AddToCart", "Home", null, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
